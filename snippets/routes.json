  "StoneScriptPHP POST Route with Validation": {
    "prefix": "stone-route-post",
    "description": "Create a POST route with validation extending BaseRoute",
    "body": [
      "<?php",
      "",
      "namespace App\\Routes;",
      "",
      "use Framework\\Routing\\BaseRoute;",
      "use Framework\\Http\\ApiResponse;",
      "use Framework\\Validation\\Validator;",
      "",
      "/**",
      " * ${1:RouteDescription}",
      " *",
      " * Usage:",
      " *   POST http://localhost:9100/${2:endpoint}",
      " *   Body: {",
      " *     ${3:// Expected fields}",
      " *   }",
      " */",
      "class ${4:RouteName}Route extends BaseRoute",
      "{",
      "    /**",
      "     * Validation rules",
      "     */",
      "    protected function rules(): array",
      "    {",
      "        return [",
      "            '${5:field}' => '${6:required|string}',",
      "            ${7:// Add more validation rules}",
      "        ];",
      "    }",
      "",
      "    /**",
      "     * Process the request",
      "     */",
      "    public function process(): ApiResponse",
      "    {",
      "        // Get validated input",
      "        $$${5:field} = \\$this->input('${5:field}');",
      "",
      "        ${8:// Your logic here}",
      "",
      "        return new ApiResponse('ok', '${9:Success message}', [",
      "            ${10:// Your data here}",
      "        ]);",
      "    }",
      "}",
      ""
    ]
  },
  "StoneScriptPHP Route with Contract": {
    "prefix": "stone-route-contract",
    "description": "Create a route implementing IRouteHandler and a custom contract",
    "body": [
      "<?php",
      "",
      "namespace App\\Routes;",
      "",
      "use Framework\\IRouteHandler;",
      "use Framework\\ApiResponse;",
      "use App\\Contracts\\I${1:ContractName};",
      "use App\\DTO\\${2:RequestDTO};",
      "use App\\DTO\\${3:ResponseDTO};",
      "",
      "class ${4:RouteName}Route implements IRouteHandler, I${1:ContractName}",
      "{",
      "    public ${5:string} $$${6:field};",
      "",
      "    public function validation_rules(): array",
      "    {",
      "        return [",
      "            '${6:field}' => '${7:required|string}',",
      "            ${8:// Add more validation rules}",
      "        ];",
      "    }",
      "",
      "    public function process(): ApiResponse",
      "    {",
      "        // Build request DTO from input",
      "        \\$request = new ${2:RequestDTO}(",
      "            ${6:field}: \\$this->${6:field},",
      "            ${9:// Add more fields}",
      "        );",
      "",
      "        \\$response = \\$this->execute(\\$request);",
      "",
      "        return res_ok(\\$response, '${10:Success message}');",
      "    }",
      "",
      "    public function execute(${2:RequestDTO} \\$request): ${3:ResponseDTO}",
      "    {",
      "        ${11:// Your business logic here}",
      "",
      "        return new ${3:ResponseDTO}(",
      "            ${12:// Response data}",
      "        );",
      "    }",
      "}",
      ""
    ]
  },
  "StoneScriptPHP Health Route": {
    "prefix": "stone-route-health",
    "description": "Create a health check route",
    "body": [
      "<?php",
      "",
      "namespace App\\Routes;",
      "",
      "use Framework\\Routing\\BaseRoute;",
      "use Framework\\Http\\ApiResponse;",
      "",
      "/**",
      " * Health check endpoint",
      " *",
      " * Usage:",
      " *   GET http://localhost:9100/health",
      " */",
      "class HealthRoute extends BaseRoute",
      "{",
      "    /**",
      "     * Process the request",
      "     */",
      "    public function process(): ApiResponse",
      "    {",
      "        return new ApiResponse('ok', 'Service is healthy', [",
      "            'status' => 'healthy',",
      "            'timestamp' => date('c'),",
      "            'service' => '${1:service-name}',",
      "            'version' => '${2:1.0.0}'",
      "        ]);",
      "    }",
      "}",
      ""
    ]
  }

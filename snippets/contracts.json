{
  "StoneScriptPHP Contract Interface": {
    "prefix": "stone-contract",
    "description": "Create a contract interface for a route",
    "body": [
      "<?php",
      "",
      "namespace App\\Contracts;",
      "",
      "use App\\DTO\\${1:Request};",
      "use App\\DTO\\${2:Response};",
      "",
      "interface I${3:ContractName}",
      "{",
      "    public function execute(${1:Request} \\$request): ${2:Response};",
      "}",
      ""
    ]
  },
  "StoneScriptPHP Route Contract": {
    "prefix": "stone-contract-route",
    "description": "Create a route contract with request and response DTOs",
    "body": [
      "<?php",
      "",
      "namespace App\\Contracts;",
      "",
      "use App\\DTO\\${1:EntityName}Request;",
      "use App\\DTO\\${1:EntityName}Response;",
      "",
      "/**",
      " * Contract for ${1:EntityName} route",
      " *",
      " * ${2:Contract description}",
      " */",
      "interface I${1:EntityName}Route",
      "{",
      "    /**",
      "     * Execute the route logic",
      "     *",
      "     * @param ${1:EntityName}Request \\$request Request data",
      "     * @return ${1:EntityName}Response Response data",
      "     */",
      "    public function execute(${1:EntityName}Request \\$request): ${1:EntityName}Response;",
      "}",
      ""
    ]
  },
  "StoneScriptPHP Service Contract": {
    "prefix": "stone-contract-service",
    "description": "Create a service contract interface",
    "body": [
      "<?php",
      "",
      "namespace App\\Contracts;",
      "",
      "/**",
      " * ${1:ServiceName} Service Contract",
      " *",
      " * ${2:Service description}",
      " */",
      "interface I${1:ServiceName}Service",
      "{",
      "    /**",
      "     * ${3:Method description}",
      "     *",
      "     * @param ${4:string} $$${5:param} ${6:Parameter description}",
      "     * @return ${7:array} ${8:Return description}",
      "     */",
      "    public function ${9:methodName}(${4:string} $$${5:param}): ${7:array};",
      "}",
      ""
    ]
  },
  "StoneScriptPHP Repository Contract": {
    "prefix": "stone-contract-repository",
    "description": "Create a repository contract interface",
    "body": [
      "<?php",
      "",
      "namespace App\\Contracts;",
      "",
      "/**",
      " * ${1:EntityName} Repository Contract",
      " *",
      " * ${2:Repository description}",
      " */",
      "interface I${1:EntityName}Repository",
      "{",
      "    /**",
      "     * Find ${1:entity} by ID",
      "     *",
      "     * @param int $$id Entity ID",
      "     * @return array|null Entity data or null if not found",
      "     */",
      "    public function findById(int \\$id): ?array;",
      "",
      "    /**",
      "     * Create new ${1:entity}",
      "     *",
      "     * @param array \\$data Entity data",
      "     * @return array Created entity",
      "     */",
      "    public function create(array \\$data): array;",
      "",
      "    /**",
      "     * Update ${1:entity}",
      "     *",
      "     * @param int $$id Entity ID",
      "     * @param array \\$data Updated data",
      "     * @return array Updated entity",
      "     */",
      "    public function update(int \\$id, array \\$data): array;",
      "",
      "    /**",
      "     * Delete ${1:entity}",
      "     *",
      "     * @param int $$id Entity ID",
      "     * @return bool True if deleted successfully",
      "     */",
      "    public function delete(int \\$id): bool;",
      "}",
      ""
    ]
  }
}
